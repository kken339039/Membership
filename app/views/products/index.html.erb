<div class="page-title">
  <div class="product-title">
    <span>Product List</span>
    <% if current_user && current_user.has_role?(:admin) %>
      <div class="create-btn">
        <%= link_to "New Product", new_product_path, class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
<div class="row justify-content-sm-center">
  <% @products.each do |prod| %>
    <div class="col-md-auto col-sm-12 mb-3">
      <div class="card product-list-item" style="width: 20rem;">
        <% if prod.images.length > 0 %>
          <%= content_tag :div, class: "carousel slide", id: "carousel-#{prod.id}" do %>
            <div class="carousel-inner">
              <% prod.images.each_with_index do |image, i| %>
                <% if i == 0 %>
                  <div class="carousel-item active">
                    <%= image_tag image.image_url, class: 'd-block w-100', alt: ''%>
                  </div>
                <% else %>
                  <div class="carousel-item">
                    <%= image_tag image.image_url, class: 'd-block w-100', alt: ''%>
                  </div>
                <% end %>
              <% end %>
            </div>
            <%= content_tag :a, { "class": "carousel-control-prev", "href": "#carousel-#{prod.id}", "role": "button", "data-slide": "prev" } do %>
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <% end %>
            <%= content_tag :a, { "class": "carousel-control-next", "href": "#carousel-#{prod.id}", "role": "button", "data-slide": "next" } do %>
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            <% end %>
          <% end %>
        <% else %>
          <div class="not-images"> 
            Image not uploaded yet
          </div>
        <%end%>
        <div class="card-body">
          <h5 class="card-title">
            <%= prod.name %>
          </h5>
          <p class="card-text">
            <% if current_user %>
              <% if current_user.has_role?(:premium) %>
                Price: <%= number_to_currency((prod.price * 0.8)) %>
              <% else %>
                Price: <%= number_to_currency(prod.price) %>
              <% end %>
              <% if current_user.has_role?(:admin) %>
                <div class="pull-right">
                  <%= link_to "Edit Product", edit_product_path(prod), class: "btn btn-outline-primary" %>
                </div>
              <% end %>
            <% else %>
              Price: <%= number_to_currency(prod.price) %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row justify-content-md-center">
  <%= paginate @products %>
</div>
