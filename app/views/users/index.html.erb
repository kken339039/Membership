<div class="page-title">
  <h3>User List</h3>
</div>

<div class="container">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        <th scope="col">Admin Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= user.email %>
          </td>
          <% if user.is_admin? %>
            <td class="role-icon">
              <span class="badge badge-primary">Admin User</span>
            </td>
            <td class="role-icon">
              <%= link_to "Demote to Normal User", user_demote_path(user_id: user.id), method: :delete, class: "btn btn-outline-danger" %>
            </td>
          <% else %> 
            <td class="role-icon">
              <span class="badge badge-secondary">Normal User</span>
            </td>
            <td class="role-icon">
              <%= link_to "Promote to Admin User", user_promote_path(user_id: user.id), method: :post, class: "btn btn-outline-primary" %>
            </td>
          <% end %>
        </tr>
    </tbody>
    <% end %>
  </table>
</div>

